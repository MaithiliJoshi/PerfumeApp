<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="?attr/colorButtonNormal"
                                                   android:id="@+id/perfume_item" android:clickable="true"
                                                   android:focusable="auto" android:focusableInTouchMode="true"
                                                   android:layerType="none" android:forceDarkAllowed="false"
                                                   android:clipToPadding="false"
                                                   android:fadeScrollbars="true"
                                                   android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
                                                   android:layout_marginTop="4dp" android:layout_marginEnd="8dp"
                                                   android:layout_marginRight="8dp" android:layout_marginBottom="4dp">

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@drawable/cute_perfume"
            android:id="@+id/perfume_image" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center" android:contentDescription="Perfume image"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:id="@+id/perfume_brand"
            app:layout_constraintTop_toTopOf="@+id/perfume_image"
            app:layout_constraintStart_toEndOf="@+id/perfume_image" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:text="Davidoff "
            app:layout_constraintBottom_toBottomOf="parent" android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:contentDescription="perfume_brand" android:fontFamily="@font/roboto_medium"
            android:textStyle="bold" android:background="#00B9B2B2" android:textSize="18sp"
            android:layout_marginBottom="8dp" app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintVertical_bias="0.0" android:textColor="@android:color/black"/>
    <TextView
            android:text="Coolwater"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/perfume_name"
            app:layout_constraintTop_toBottomOf="@+id/perfume_brand"
            app:layout_constraintStart_toEndOf="@+id/perfume_image" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/perfume_image" android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textAlignment="textStart"
            android:textColor="@android:color/widget_edittext_dark"/>
</androidx.constraintlayout.widget.ConstraintLayout>